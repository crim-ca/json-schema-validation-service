      "searchMode": "keyword_ws",
      "locked": false,
      "minItems": 0,
      "items": {
        "type": "string"
      }
    },
	"definition": {
      "type": "string",
      "description": "Description of the associated concept.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
	},
	"pos": {
      "type": "string",
      "description": "Part-os-speech of this term.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
