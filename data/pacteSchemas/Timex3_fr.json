{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "targetType": "document_surface1d",
  "schemaType": "Timex3",
  "title": "Timex3",
  "type": "object",
  "required": [
    "schemaType",
    "_corpusID",
    "_documentID",
    "offsets"
  ],
  "properties": {
    "schemaType": {
      "type": "string",
      "description": "Schema type",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "_documentID": {
      "type": "string",
      "description": "Internal document GUID",
      "searchable": true,
      "searchMode": "exact",
      "locked": true
    },
    "_corpusID": {
      "type": "string",
      "description": "Internal Corpus GUID",
      "searchable": true,
      "searchMode": "exact",
      "locked": true
    },
    "offsets": {
      "searchable": true,
      "locked": true,
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "begin": {
            "type": "integer",
            "minimum": 0
          },
          "end": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "tid": {
      "type": "string",
      "description": "Chaque expression TIMEX3 est identifié par un identifiant unique.",
      "searchable": true,
      "searchMode": "exact",
      "locked": true
    },
    "type": {
      "description": "Type d'expression.",
      "type": "string",
      "enum": [
        "TIME",
        "DATE",
        "DURATION",
        "SET"
      ],
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "value": {
      "type": "string",
      "description": "Valeur en format ISO 8601 étendu.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
    },
    "text": {
      "type": "string",
      "description": "Texte ciblé",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
    },
    "temporalFunction": {
      "type": "boolean",
      "description": "Indique si l'expression temporelle a besoin d'être déterminée par l'évaluation d'une fonction temporelle.",
      "searchable": true,
      "searchMode": "exact",
      "locked": false
    },
    "mod": {
      "type": "string",
      "description": "Modificateur.",
      "enum": [
        "Points.BEFORE",
        "Points.AFTER",
        "Points.ON_OR_BEFORE",
        "Points.ON_OR_AFTER",
        "Durations.LESS_THAN",
        "Durations.MORE_THAN",
        "Durations.EQUAL_OR_LESS",
        "Durations.EQUAL_OR_MORE",
        "PointsDurations.START",
        "PointsDurations.MID",
        "PointsDurations.END",
        "PointsDurations.APPROX"
      ]
    },
    "anchorTimeID": {
      "type": "string",
      "description": "Identifiant de l'expression temporelle à laquelle cette annotation réfère.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
    },
    "beginPoint": {
      "type": "string",
      "description": "Utilisé pour une durée ou lorsqu'une annotation est ancrée par une autre expression.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
    },
    "endPoint": {
      "type": "string",
      "description": "Utilisé pour une durée ou lorsqu'une annotation est ancrée par une autre expression.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
    },
    "quant": {
      "type": "string",
      "description": "Utilisé pour le modificateur de type SET. Une chaîne de caractère du texte qui quantifie l'expression.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
    },
    "freq": {
      "type": "string",
      "description": "Utilisé pour le modificateur de type SET. Contient une valeur entière et une granularité temporelle qui représente la fréquence de récurrence de l'expression.",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": false
    }
  }
}