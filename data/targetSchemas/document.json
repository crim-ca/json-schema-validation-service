  "type": "object",
  "required": [
    "schemaType",
    "_documentID",
    "_corpusID"
  ],
  "properties": {
    "schemaType": {
      "type": "string",
      "description": "Schema type",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "_documentID": {
      "type": "string",
      "description": "Internal document GUID",
      "searchable": true,
      "searchMode": "exact",
      "locked": true
    },
    "_corpusID": {
      "type": "string",
      "description": "Internal Corpus GUID",
      "searchable": true,
      "searchMode": "exact",
      "locked": true
    }
  }
}
