{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://adnotare.crim.ca/schema/custom-meta-schema#",
  "targetType": "multimedia_document_content",
  "title": "Multimedia document content",
  "description": "Multimedia document content schema",
  "type": "object",
  "required": [
    "@context",
    "@type",
    "_schemaType",
    "_corpusID",
    "_documentID",
    "begin",
    "end"
  ],
  "properties": {
    "@context": {
      "format": "url",
      "type": "string",
      "description": "JSON-LD context",
      "searchable": false,
      "locked": true
    },
    "@type": {
      "type": "string",
      "description": "JSON-LD type",
      "searchable": false,
      "locked": true
    },
    "_schemaType": {
      "type": "string",
      "description": "Schema type",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "_documentID": {
      "type": "string",
      "description": "Internal document GUID",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "_corpusID": {
      "type": "string",
      "description": "Internal Corpus GUID",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "begin": {
      "type": "number",
      "description": "Annotation starting time in miliseconds",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "end": {
      "type": "number",
      "description": "Annotation ending time in miliseconds",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    },
    "confidence": {
      "maximum": 100,
      "minimum": 0,
      "type": "number",
      "description": "Confidence degree",
      "searchable": true,
      "searchMode": "keyword_ws",
      "locked": true
    }
  }
}
